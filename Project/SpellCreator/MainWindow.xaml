<Window x:Class="SpellCreator.MainWindow" Background="LightGray"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpellCreator"
        mc:Ignorable="d"
        x:Name="WindowElement"
        Title="D&amp;D Spell Creator" SizeToContent="Height" WindowStyle="ThreeDBorderWindow" MinWidth="800" MinHeight="480" Width="800" Height="480"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="{x:Type ColumnDefinition}">
            <Setter Property="Width" Value="auto"/>
        </Style>
    </Window.Resources>
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="auto" Width="auto">
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open Spell" Click="ImportSpell"></MenuItem>
                <MenuItem Header="Open Spells Database"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Save" IsEnabled="False"></MenuItem>
                <MenuItem Header="Store Spell in Database"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Export Spell" Click="ExportSpell"></MenuItem>
                <MenuItem Header="Export Database"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Cut" Command="ApplicationCommands.Cut"></MenuItem>
                <MenuItem Header="Copy" Command="ApplicationCommands.Copy"></MenuItem>
                <MenuItem Header="Paste" Command="ApplicationCommands.Paste"></MenuItem>
            </MenuItem>
            <MenuItem Header="About">
                <MenuItem Header="Version 0.2.0"></MenuItem>
            </MenuItem>
            <MenuItem Header="Debugs">
                <MenuItem Header="Debug Currentspell" Click="DisplaySpell"></MenuItem>
            </MenuItem>
        </Menu>
        <TabControl x:Name="TabControl_Main">
            <TabItem Name="Tabs_SpellCreator" Header="Spell Creator">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Column="0" Header="Spell Data" Width="auto" Style="{StaticResource Spell.Creator.GroupBox}">
                        <Grid Margin="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <!--Name-->
                            <Label Grid.Row="0" Style="{StaticResource Spell.Creator.Title}">Name</Label>
                            <TextBox Grid.Row="0" Style="{StaticResource Spell.Creator.Field}" Text="{Binding Path=CurrentSpell.name, Mode=TwoWay}"></TextBox>
                            <!--Level-->
                            <Label Grid.Row="1" Style="{StaticResource Spell.Creator.Title}">Level</Label>
                            <ComboBox Grid.Row="1" Style="{StaticResource Spell.Creator.Field}" ItemsSource="{Binding Path=DndDatabase.Levels_GetActive}" DisplayMemberPath="level" SelectedValuePath="level" SelectedValue="{Binding Path=CurrentSpell.level, Mode=TwoWay}"></ComboBox>
                            <!--School-->
                            <Label Grid.Row="2" Style="{StaticResource Spell.Creator.Title}">School</Label>
                            <ComboBox Grid.Row="2" Style="{StaticResource Spell.Creator.Field}" ItemsSource="{Binding Path=DndDatabase.Schools_GetActive}" DisplayMemberPath="name" SelectedValuePath="name" SelectedValue="{Binding Path=CurrentSpell.school, Mode=TwoWay}"/>
                            <!--Casting Time-->
                            <Label Grid.Row="3" Style="{StaticResource Spell.Creator.Title}">Casting Time</Label>
                            <ComboBox Grid.Row="3" Style="{StaticResource Spell.Creator.Field}" ItemsSource="{Binding Path=DndDatabase.CastTimes_GetActive}" DisplayMemberPath="castTime" SelectedValuePath="castTime" SelectedValue="{Binding Path=CurrentSpell.casting_time, Mode=TwoWay}"></ComboBox>
                            <!--Range-->
                            <Label Grid.Row="4" Style="{StaticResource Spell.Creator.Title}">Range</Label>
                            <TextBox Grid.Row="4" Style="{StaticResource Spell.Creator.Field}" Text="{Binding Path=CurrentSpell.range, Mode=TwoWay}"></TextBox>
                            <!--Duration-->
                            <Label Grid.Row="5" Style="{StaticResource Spell.Creator.Title}">Duration</Label>
                            <TextBox Grid.Row="5" Style="{StaticResource Spell.Creator.Field}" Text="{Binding Path=CurrentSpell.duration, Mode=TwoWay}"></TextBox>
                            <!--Ritual-->
                            <CheckBox Style="{StaticResource Spell.Current.Toggle}" Grid.Row ="6" IsChecked="{Binding Path=CurrentSpell.ritual, Mode=TwoWay}" Grid.Column="1">Ritual</CheckBox>
                            <!--Concentration-->
                            <CheckBox Style="{StaticResource Spell.Current.Toggle}" Grid.Row ="6" Grid.Column="1" HorizontalAlignment="Right" IsChecked="{Binding Path=CurrentSpell.concentration, Mode=TwoWay}">Concentration</CheckBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Column="0" Grid.Row="1" Header="Components" Height="auto" Style="{StaticResource Spell.Creator.GroupBox}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <CheckBox Grid.Row="0" Grid.Column ="0" Style="{StaticResource Spell.Current.Toggle}" IsChecked="{Binding Path=CurrentSpell.vocal, Mode=TwoWay}">Vocal</CheckBox>
                            <CheckBox Grid.Row="0" Grid.Column ="1" Style="{StaticResource Spell.Current.Toggle}" IsChecked="{Binding Path=CurrentSpell.somatic, Mode=TwoWay}">Somatic</CheckBox>
                            <CheckBox x:Name="Checkbox_Material" Grid.Row="0" Grid.Column ="2" Style="{StaticResource Spell.Current.Toggle}" IsChecked="{Binding Path=CurrentSpell.material, Mode=TwoWay}">Material</CheckBox>
                            <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="5" Text="{Binding Path=CurrentSpell.materialDescription, Mode=TwoWay}"
                                     IsEnabled="{Binding ElementName=Checkbox_Material, Path=IsChecked, TargetNullValue=False}"></TextBox>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Classes" Grid.Column="0" Grid.Row="2" Style="{StaticResource Spell.Creator.GroupBox}">
                        <TextBox Grid.Row="0" Grid.Column="0" Style="{StaticResource Spell.Creator.LargeField}" Text="{Binding Path=CurrentSpell.classes, Mode=TwoWay}"></TextBox>
                    </GroupBox>
                    <GroupBox Name ="Spell_Creator_Description" Grid.Column="1" Grid.Row="0" Header="Spell Description" Style="{StaticResource Spell.Creator.GroupBox}">
                        <ScrollViewer Margin="5,7,5,5">
                            <RichTextBox Name ="spell_description" Width="auto" Height="auto"/>
                        </ScrollViewer>
                    </GroupBox>
                    <GroupBox Name="Spell_Creator_DescriptionHigh" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Header="Upcast Description" Style="{StaticResource Spell.Creator.GroupBox}">
                        <ScrollViewer Margin="5">
                            <RichTextBox Name ="spell_higher" Width="auto" Height="auto"/>
                        </ScrollViewer>
                    </GroupBox>
                    <GroupBox Header="Book Reference" Grid.Column="0" Grid.Row="3" Style="{StaticResource Spell.Creator.GroupBox}">
                        <TextBox Style="{StaticResource Spell.Creator.LargeField}" Text="{Binding Path=CurrentSpell.book, Mode=TwoWay}"></TextBox>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Name="Tabs_SpellDatabase" Header="Spell Database">
                <Grid MinWidth="600" MinHeight="350">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- This row will receive all remaining Height -->
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ScrollViewer Grid.Row="0" Grid.RowSpan="2" Background="White" MaxHeight="350" Margin="0,0,5,0">
                        <StackPanel Name="spell_list" Width="auto" >
                            <Button Style="{DynamicResource SpellListButton}" Height="25" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="2,2,2,0">
                                <TextBlock Width="auto" Height="auto" Text="Spell Name" Margin="5,0,0,0"/>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                    <StackPanel Grid.Column="1" Width="auto" Style="{StaticResource Spell.Creator.GroupBox}">
                        <Grid Background="White" Height="auto" HorizontalAlignment="Stretch" VerticalAlignment="Top" ShowGridLines="False">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" Style="{StaticResource Spell.Book.Showcase.Text}">Name</Label>
                            <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource Spell.Book.Showcase.Text}" Content="{Binding Path=CurrentSpell.name, Mode=OneWay}"></Label>

                            <Label Grid.Row="1" Style="{StaticResource Spell.Book.Showcase.Text}">Level</Label>
                            <Label Grid.Row="1" Grid.Column="1"  Style="{StaticResource Spell.Book.Showcase.Text}" Content="{Binding Path=CurrentSpell.level, Mode=OneWay}"></Label>

                            <Label Grid.Row="2" Style="{StaticResource Spell.Book.Showcase.Text}">School</Label>
                            <Label Grid.Row="2" Grid.Column="1"  Style="{StaticResource Spell.Book.Showcase.Text}" Content="{Binding Path=CurrentSpell.school, Mode=OneWay}"/>

                            <Label Grid.Row="3" Style="{StaticResource Spell.Book.Showcase.Text}">Casting Time</Label>
                            <Label Grid.Row="3" Grid.Column="1"  Style="{StaticResource Spell.Book.Showcase.Text}" Content="{Binding Path=CurrentSpell.casting_time, Mode=OneWay}"></Label>

                            <Label Grid.Row="4" Style="{StaticResource Spell.Book.Showcase.Text}">Range</Label>
                            <Label Grid.Row="4" Grid.Column="1"  Style="{StaticResource Spell.Book.Showcase.Text}" Content="{Binding Path=CurrentSpell.range, Mode=OneWay}"></Label>

                            <Label Grid.Row="5" Style="{StaticResource Spell.Book.Showcase.Text}">Duration</Label>
                            <Label Grid.Row="5" Grid.Column="1"  Style="{StaticResource Spell.Book.Showcase.Text}" Content="{Binding Path=CurrentSpell.duration, Mode=OneWay}"></Label>

                            <Label Grid.Row="6" Style="{StaticResource Spell.Book.Showcase.Text}">Ritual</Label>
                            <Label Grid.Row="6" Grid.Column="1"  Style="{StaticResource Spell.Book.Showcase.Text}" Content="{Binding Path=CurrentSpell.ritual, Mode=OneWay}"></Label>

                            <Label Grid.Row="7" Style="{StaticResource Spell.Book.Showcase.Text}">Concentration</Label>
                            <Label Grid.Row="7" Grid.Column="1"  Style="{StaticResource Spell.Book.Showcase.Text}" Content="{Binding Path=CurrentSpell.concentration, Mode=OneWay}"></Label>

                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
